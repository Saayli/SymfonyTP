{% extends 'base.html.twig' %}

{% block title %}Ajouter un chaton{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h2>Chatons de la catégorie {{ categorie.titre }}</h2>
        {% for c in chatons %}
            <div class="col col-3">
                <div class="card"><img src='{{ c.photo }}' alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">{{ c.nom }}</h3>
                        <p>{% if c.sterelise == 1 %}
                                Ce chaton est stérile.
                            {% endif %}
                            {% if c.sterelise == 0 %}
                                Ce chaton n'est pas stérile.
                            {% endif %}
                        </p>
                        <a href="{{ path("chaton_modifier", {"id":c.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('chaton_supprimer', {"id":c.id}) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>

        {% endfor %}
        <div class="container">
            <a href="{{ path('ajouter_chaton') }}" class="btn btn-primary">Ajouter un chaton</a>
        </div>
    </div>
{% endblock %}
