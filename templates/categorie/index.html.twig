{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Gestion des chatons BDD</h1>
        <table class="table table-striped">
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th></th>
            </tr>
            {% for c in categories %}
            <tr>
                <td>{{ c.titre }}</td>
                <td>{{ c.description}}</td>
                <td><a href="{{ path('categorie_modifier', {"id":c.id}) }}" class="btn btn-primary">Modifier</a>
                <a href="{{ path('categorie_supprimer', {"id":c.id}) }}" class="btn btn-danger">Supprimer</a>
                <a href="{{ path('chaton_afficher', {"id":c.id}) }}" class="btn btn-warning">Chatons</a></td>
            </tr>
            {% endfor %}
        </table>
        <h2>Ajouter une cat√©gorie</h2>
        {{ form(formulaire) }}
    </div>

{% endblock %}